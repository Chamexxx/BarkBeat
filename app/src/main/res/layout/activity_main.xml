<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:padding="16dp"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/barkbeat"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="BarkBeat "
            android:textColor="@color/white"
            android:padding="13dp"
            android:textSize="24sp" />
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="20dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/icon_user"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_above="@id/player_view"
        android:id="@+id/toolbar"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- RelativeLayout para colocar el icono al lado del texto "Géneros" -->
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="60dp">

                <!-- Texto "Géneros" -->
                <TextView
                    android:id="@+id/genres_section"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Géneros"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:fontFamily="sans-serif-medium"/>

                <!-- Icono al lado del texto "Géneros" -->
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_toEndOf="@id/genres_section"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/icon_gen"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_marginStart="10dp"
                android:id="@+id/cat_recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>



        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:visibility="gone"
            android:id="@+id/section_trending_main_layout">

            <TextView
                android:id="@+id/trending_section"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tendencias"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:fontFamily="sans-serif-medium"/>

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_toEndOf="@id/trending_section"
                android:layout_marginStart="8dp"
                android:src="@drawable/icon_trend"
                android:layout_centerVertical="false"/>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_marginStart="10dp"
                android:id="@+id/trending_recyclerView"
                android:layout_width="match_parent"
                android:layout_below="@+id/trending_section"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:visibility="gone"
            android:id="@+id/section_artist_main_layout">

            <TextView
                android:id="@+id/artist_section"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Artistas"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:fontFamily="sans-serif-medium"/>

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_toEndOf="@id/artist_section"
                android:layout_marginStart="8dp"
                android:src="@drawable/icon_library"
                android:layout_centerVertical="false"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/artist_recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/artist_section"
                android:layout_marginStart="10dp"
                android:layout_marginTop="3dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:visibility="gone"
            android:id="@+id/section_favorite_main_layout">

            <TextView
                android:id="@+id/favorite_section"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tus favoritos"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:fontFamily="sans-serif-medium"/>

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_toEndOf="@id/favorite_section"
                android:layout_marginStart="8dp"
                android:src="@drawable/icon_favorite"
                android:layout_centerVertical="false"/>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_marginStart="10dp"
                android:id="@+id/favorite_recyclerView"
                android:layout_width="match_parent"
                android:layout_below="@+id/favorite_section"
                android:layout_height="wrap_content"/>
        </RelativeLayout>


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:padding="8dp"
        android:background="@color/black"
        android:id="@+id/player_view"
        android:layout_alignParentBottom="true">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/song_cover_image_view"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/song_title_text_view"
            android:text="Reproduciendo:"
            android:textColor="@color/white"
            android:layout_toEndOf="@+id/song_cover_image_view"
            android:paddingStart="16dp"
            android:layout_centerVertical="true"
            android:textSize="20sp"/>

    </RelativeLayout>

</RelativeLayout>
